<Window x:Class="Animutivator.SelectGirlWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Animutivator"
        mc:Ignorable="d"
		
        Title="Select Avatar" Height="400" Width="640" Icon="images/animutivator_icon.ico" 
		MinWidth="640" MinHeight="320" WindowStartupLocation="CenterScreen" 
		SnapsToDevicePixels="True">
	<Window.TaskbarItemInfo>
		<TaskbarItemInfo Description="Animutivator: select a girl." ProgressState="Paused"/>
	</Window.TaskbarItemInfo>
	<ScrollViewer>
		<WrapPanel  Orientation="Horizontal" Margin="10" 
					Name="girlsPanel" ScrollViewer.CanContentScroll="True"/>
	</ScrollViewer>
</Window>
